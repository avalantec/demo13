<odoo>
  <record id="format_checks.account_journal_inherit" model="ir.ui.view">
  <field name="name">format.checks.account.journal.form</field>
  <field name="model">account.journal</field>
  <field name="inherit_id" ref="account.view_account_journal_form"/>
  <field name="arch" type="xml">
     <page name="advanced_settings" position="after">
         <page name="checks_information" string="Check Information" attrs="{'invisible': [('type', '!=', 'bank')]}"  groups="base.group_erp_manager" >
            <group>
               <field name="company_name" />
               <field name="company_address" />
               <field name="bank_name" />
               <field name="bank_address" />
               <field name="account_number" />
               <field name="bank_routing_number" />
            </group>
         </page>
     </page>
  </field>
</record>

</odoo>