<odoo>
<template id="format_checks.check_layout">
        <style type="text/css">

         @font-face {
            font-family: e13b;
            src: url(data:font/truetype;charset=utf-8;base64,data:application/octet-stream;base64,AAEAAAAOAIAAAwBgT1MvMhCkNOgAABVsAAAATlBDTFQlayRdAAAH4AAAADZjbWFwMkJFCwAAAOwAAAG8Y3Z0IAcIBMwAAAKoAAAALGZwZ20CEcJhAAAC1AAAAdhnbHlmLFqWpwAACBgAAAy2aGVhZGRFSpoAAASsAAAANmhoZW) format("truetype");
         }
         
         p{
            font-family: e13b;
         }
         
         </style>

        <div style="margin-left:10%;font-size:9px;">
            <div class="row mt-5">
            </div>
            <div class="row mt-5">
            </div>
        <div class="row mt-5">
                <div class="col-4">
                    <span t-esc="o.journal_id.company_name"/>
                    <br/>
                    <span t-esc="o.journal_id.company_address"/>
                </div>
                <div class="col-4">
                    <span t-esc="o.journal_id.bank_name"/>
                    <br/>
                    <span t-esc="o.journal_id.bank_address"/>
                </div>
                <div class="col-4">
                    <span t-esc="o.check_number"/>
                </div>
                
            </div>
            <div class="row mt-1">
                <div class="col-4">
                    <div class="row">
                        <div class="col-3">
                            <strong>PAY </strong>
                        </div>
                        <div class="col-8">
                            <span t-esc="page['amount_in_word'].replace('*','')"/>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <strong>DATE</strong>
                    <br/>
                    <span t-esc="page['payment_date']"/>
                </div>
                <div class="col-4">
                    <strong>AMOUNT</strong>
                    <br/>
                    <span t-esc="page['amount']"/>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="row">
                        <div class="col-3 mt-3">
                            <strong>TO THE ORDER OF</strong>
                        </div>
                        <div class="col-9 mt-3">
                            <div class="ckus_payee_addr" t-esc="page['partner_id']" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        </div>
                    </div>
                    
                </div>
                <div class="col-6 mt-5">
                        <div style="border-bottom: 1px solid black;width:165px;"/>
                        <span>AUTHORIZED SIGNATURE</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mt-2">
            <center><p t-esc="'C'+o.check_number+'C '+'A'+str(o.journal_id.bank_routing_number)+'A '+str(o.journal_id.account_number)+'C'"/></center>
            </div>
        </div>
</template>


<template id="template_id" name="template_name" inherit_id="l10n_us_check_printing.print_check_top">
    <xpath expr="//t[@t-call='l10n_us_check_printing.ckus_check']" position="replace">
        <t t-call="format_checks.check_layout"/>
    </xpath>
</template>

</odoo>